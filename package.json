    "@storybook/testing-library": "^0.2.2",
    "@storybook/vue3": "^7.5.3",
    "@storybook/vue3-vite": "^7.5.3",
    "@types/node": "^20.9.4",
    "@vitest/coverage-v8": "^0.34.6",
    "defu": "^6.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.5.3",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitepress": "^1.0.0-rc.24",
    "vitest": "^0.34.6",
    "vue-tsc": "^1.8.22"
  }
}
